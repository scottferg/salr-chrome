        "js/quick-reply-preview-parser.js",
        "js/quick-reply.js",
        "js/page-navigator.js",
        "js/post-history.js",
        "js/salr.js",
		"js/jquery/colorpicker.js",
        "js/background.js"
      ],
      "css" : [
        "css/jquery-ui/jquery-ui.custom.css",
        "css/mouse-gestures.css",
        "css/quick-reply.css",
        "css/threadnotes.css",
